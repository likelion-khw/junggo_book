      					<th>닉네임</th>
      					<td><%=current_user.nickname%></td>
      				</tr>
      				
      				<tr>
      					<th>휴대폰 번호</th>
      					<td><%=current_user.phone%></td>
      				</tr>
      				
      				<tr>
      					<th>학과</th>
      					<td><%=current_user.major%></td>
      				</tr>
      				
      				<tr>
      					<th>이름</th>
      					<td><%=current_user.name%></td>
      				</tr>
      				
