<% if @menu=="판매"%>
  <input type="text" name="search-items" class="form-control" id="contact-list-search" placeholder="Search Items" autocomplete="off">
    <ul class="list-group" id="contact-list">
      <li class="list-group-item">
       <% Book.where('user_id =?',current_user.id).each do |book|%>
         <% @percent = ((1 - book.sell_price.to_f/book.book_price.to_f)*100).to_i %>
        
          <div class="well" style="height: 120px; padding: 10px">
            <img src="<%=book.image_url%>" style="float:left;padding-right:20px" width="100" height="100">
            
            <div style="float: left;">
              <b>책 이름: <%=book.book_title%><br>
              판매가: <%=book.sell_price%>원 (정가대비 <%=@percent%>% 할인)<br>
              판매등록일: <%= book.created_at.in_time_zone("Asia/Seoul").strftime("%Y/%m/%d %H:%M:%S")%></b>
            </div>
            
            <!--<div style="float: right;">-->
            <!--  <div class="alert alert-danger">-->
            <!--    Not Available.-->
            <!--  </div>-->
            <!--</div>-->
            
          </div>
        <%end%>
    </li>
  </ul>
  
<% elsif @menu=="구매"%>
  <input type="text" name="search-items" class="form-control" id="contact-list-search" placeholder="Search Items" autocomplete="off">
    <ul class="list-group" id="contact-list">
      <li class="list-group-item">
       <% Book.where('buyer =?',current_user.id).each do |book|%>
         <% @percent = ((1 - book.sell_price.to_f/book.book_price.to_f)*100).to_i %>
        
          <div class="well" style="height: 120px; padding: 10px">
            <img src="<%=book.image_url%>" style="float:left;padding-right:20px" width="100" height="100">
            
            <div style="float: left;">
              <b>책 이름: <%=book.book_title%><br>
              구매가: <%=book.sell_price%>원 (정가대비 <%=@percent%>% 할인)<br><br>
              판매자: <%=User.find(book.user_id).nickname%><br>
              거래일: <%=book.updated_at%></b>
            </div>
            
            <!--<div style="float: right;">-->
            <!--  <div class="alert alert-danger">-->
            <!--    Not Available.-->
            <!--  </div>-->
            <!--</div>-->
            
          </div>
        <%end%>
    </li>
  </ul>
  
